{
    "manifest_version": 2,

    "name": "SecurityMsgViewer",
    "version": "1.0",
    "permissions": [
          "storage"
        ],
    "icons": {
        "128": "icons/128x128.png"
    },
    "content_scripts": [
        {
            "run_at": "document_idle",
            "matches": [ "*://new.vk.com/*", "*://vk.com/*" ],
            "js": [ "jquery-3.1.0.min.js", "content.js" ],
            "css": [ "styles.css" ]
        }
    ],

    "browser_action": {
        "default_title": "",
        "default_icon": "icons/128x128.png",
        "default_popup": "popup.html"
    }

}
